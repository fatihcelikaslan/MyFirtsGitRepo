package question;

public class Addition extends Question{

	
	public Addition( Range r) {
		super("Addition", "+");
		this.operand1 = RandomNumber.getRandomInteger(r);
		this.operand2 = RandomNumber.getRandomInteger(r);
		
		// TODO Auto-generated constructor stub
	}

	@Override
	public void calc() {
		calculated = true;
	}
	public String toString() {
		if(calculated == false) {
			return operand1+"+"+operand2+"=";
		}else return operand1+"+"+operand2+"="+answer;
	}

}
